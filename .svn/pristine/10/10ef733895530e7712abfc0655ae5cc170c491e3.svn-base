.mms-top{
    display: none;
}
.mms-mask {
    position: fixed;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    /*display: none;*/
    z-index: 99;
    background-color: rgba(0,0,0,.5);
}
.mms-main {
    position: fixed;
    left: 2rem;
    right: 2rem;
    top:50%;
    background-color: #fff;
    -webkit-tap-highlight-color: rgba(255, 255, 255, 0);
    -webkit-transform: translateZ(0);
    -webkit-user-select: none;
    -webkit-user-drag: none;
    font-size: .7rem;
    color:#404040;
    text-align: center;
    padding:0.1rem 0.8rem;
    overflow: auto;
    border-radius: 3px;
}
.mms-main .mms-header{
    border-bottom: 1px solid #e6e6e6;
    height: 2rem;
    line-height: 2rem;
}
.mms-main .mms-header h2{
    font-weight: normal;
    -webkit-user-select: none;
}
.mms-main .mms-header h2 .close{
    background: #fa5565;
    padding: 0 0.5rem;
    color: #fff;
    height: 1.5rem;
    line-height: 1.5rem;
    font-size: .85rem;
    position: absolute;
    top:.25rem;
    right: .25rem;
}
.mms-main .mms-header h2 .confirm{
    background: #069991;
    padding: 0 0.5rem;
    color: #fff;
    height: 1.5rem;
    line-height: 1.5rem;
    font-size: .85rem;
    position: absolute;
    top:.25rem;
    left: .25rem;
}
.mms-main .mms-content{
    /*text-align: left;*/
    /*position: fixed;*/
    /*top: 2.5rem;*/
    /*bottom: 0;*/
    /*padding: 0 1.5rem;*/
    /*overflow: auto;*/
}
.mms-main .mms-btn-area{
    padding:0.75rem 0;
}
.mms-main .mms-btn-area .mms-confirm-btn{
    margin-bottom: 0.75rem;width:100%;height:1.8rem;color:#fff;background-color: #fa5565;font-size:0.85rem;line-height: 1.8rem;border-radius: 2px;
}
.mms-main .mms-btn-area .mms-cancel-btn{
    width:100%;height:1.8rem;color:#fa5565;background-color: #fff;border:1px solid #fa5565;font-size:0.85rem;line-height: 1.8rem;box-sizing: border-box;border-radius: 2px;
}
.mms-main .mms-content .option-item{
    font-size: 0.7rem;height: 2.5rem;line-height: 2.5rem;border-bottom: 1px solid #e6e6e6;text-align: left;
}
.mms-main .mms-content .option-item:last-child{
    border-bottom:0;
}
.mms-main .mms-content .option-item img{
    display: none;width:0.7rem;height:0.65rem;float: right;margin:0.8rem 0;
}
.mms-main .mms-content .option-item.selected{
    color:#fa5565;
}
.mms-main .mms-content .option-item.selected img{
    display: inline-block;
}
