    _this.selfAxaj = function(page,type){//ajax请求数据 房源信息ajax请求
        var url = "?type="+type;
        var str = "?page="+page;
        url = type==""?str:url+"&page="+page;
        console.log(url);
        $.ajax({
            type:"GET",
            dataType:"json",
            url:url,
            success:function(data){
                data = JSON.parse(data);
                var main = $(".house-list .list-root");
                if(data.length>0){
                    _this.addHouseList(data,main);//ajax添加房源信息
                    $("#list-more.list-more").attr("page_num",page);//修改显示的页码
                }else{
                    dialogs.timeDialog("","暂无房源数据源",2000);
                }
            },
            error:function(){
                dialogs.timeDialog("","暂无房源数据源",2000);
                // 即使加载出错，也得重置
                //obj.resetload();

            }
        });
    };

