.usercenter {
    color: #2a2a2a;
    margin-bottom: 50px
}

.usercenter .avatar {
    background: url(../../user/images/ic_background_medium.png) 0 -20px no-repeat #fff;
    background-size: 100% 143px;
    height: 123px;
}

.usercenter .avatar .avatar-container {
    width: 78px;
    height: 78px;
    border-radius: 39px;
    background: rgba(255,255,255,.92);
    text-align: center;
    position: relative;
    left: 50%;
    margin-left: -39px;
    top: 42px
}

.usercenter .avatar .avatar-container img {
    width: 70px;
    height: 70px;
    margin-top: 4px;
    border-radius: 35px
}

.usercenter .username {
    font-size: 14px;
    height: 35px;
    line-height: 28px;
    text-align: center;
    background-color: #fff
}

.usercenter .action-group {
    margin-top: 10px
}

.usercenter .action-group .action-item {
    position: relative;
    background: #fff;
    display: block
}

.usercenter .action-group .action-item:last-of-type .name {
    border-bottom: 1px solid #fff
}

.usercenter .action-group .action-item .icon {
    width: 52px;
    height: 54px;
    border-bottom: 1px solid #fff;
    float: left
}

.usercenter .action-group .action-item .icon.collect {
    background: url(../../user/images/ic_collect@3x.png) center no-repeat;
    background-size: 22px 22px
}

.usercenter .action-group .action-item .icon.contract {
    background: url(../../user/images/ic_contract@3x.png) center no-repeat;
    background-size: 22px 22px
}

.usercenter .action-group .action-item .icon.setting {
    background: url(../../user/images/ic_set@3x.png) center no-repeat;
    background-size: 22px 22px
}

.usercenter .action-group .action-item .icon.service {
    background: url(../../user/images/ic_service@3x.png) center no-repeat;
    background-size: 22px 22px
}

.usercenter .action-group .action-item .icon.us {
    background: url(../../user/images/ic_us@3x.png) center no-repeat;
    background-size: 22px 22px
}

.usercenter .action-group .action-item .icon.share {
    background: url(../../user/images/ic_download@3x.png) center no-repeat;
    background-size: 22px 22px
}

.usercenter .action-group .action-item .icon.advice {
    background: url(../../user/images/ic_advice@3x.png) center no-repeat;
    background-size: 22px 22px
}

.usercenter .action-group .action-item .name {
    height: 54px;
    line-height: 54px;
    position: absolute;
    left: 52px;
    right: 0;
    border-bottom: 1px solid #e6e6e6;
    color: #2a2a2a
}

.usercenter .action-group .action-item .name .service-tel {
    color: #9a9a9a;
    float: right;
    margin-right: 32px
}

.usercenter .action-group .action-item .name i {
    position: absolute;
    right: 0;
    top: 0;
    width: 32px;
    height: 54px;
    background: url(../../user/images/ic_next@3x.png) center no-repeat;
    background-size: 8px 13px
}

.about-us {
    padding: 15px
}

.about-us h2 {
    line-height: 20px;
    font-size: 16px;
    color: #269A92;
    font-weight: 400;
    padding: 20px 0 5px
}

.about-us div,.about-us p {
    line-height: 18px;
    font-size: 14px
}

.about-us p {
    margin-bottom: 5px;
    text-align: justify;
    text-justify: inter-ideograph
}

.about-us .s {
    text-indent: 2em
}


