<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Title</title>
    <link rel="stylesheet" href="__STATIC__/index/slider/css/swiper.min.css">
    <!--<script  src="__STATIC__/index/index/js/jquery-3.2.1.min.js"></script>-->
    <script  src="__STATIC__/index/slider/js/swiper.min.js"></script>
    <style>
        .swiper-container {
            height: 300px;
            background-position: center;
        }
        .swiper-slide>img{
            width: 100%;
        }
    </style>
</head>
<body>
__STATIC__
<div class="swiper-container">
    <div class="swiper-wrapper">
        <div class="swiper-slide"><img src="__STATIC__/index/index/images/1.jpg" alt=""></div>
        <div class="swiper-slide"><img src="__STATIC__/index/index/images/2.jpg" alt=""></div>
        <div class="swiper-slide"><img src="__STATIC__/index/index/images/3.jpg" alt=""></div>
    </div>
    <!-- 如果需要分页器 -->
    <div class="swiper-pagination"></div>

    <!-- 如果需要导航按钮 -->
    <div class="swiper-button-prev"></div>
    <div class="swiper-button-next"></div>
</div>
<script>
    $(function(){
        var swiper = new Swiper('.swiper-container', {
            pagination: {
                el: '.swiper-pagination',
                clickable: true,
            },
            navigation: {
                nextEl: '.swiper-button-next',
                prevEl: '.swiper-button-prev',
            },
        });
    })
</script>
</body>

</html>