<script>
    $("#pic div input").change(divchange);
    function divchange(){
        $(this).parent().children('img').attr("src",URL.createObjectURL($(this)[0].files[0]));
        $("<div style='display:inline-block;width: 100px;height: 100px;position: relative'/>").appendTo("#pic");
        var newinput=$("<input type='file' name='pic[]'style='width: 100px;height: 100px;position: absolute;top: 0;left: 0;z-index: 2;opacity: 0'/>").appendTo("#pic div:last");
        $("<img src='/dry/public/static/agents/img/1.jpg' alt='暂无图片' style='width: 100px;height: 100px;position: absolute;top: 0;left: 0'/>").appendTo("#pic div:last");
        newinput.change(divchange);
    }
    $(function(){
        $('.skin-minimal input').iCheck({
            checkboxClass: 'icheckbox-blue',
            radioClass: 'iradio-blue',
            increaseArea: '20%'
        });
    });
    function saveReport() {
        $("#form-admin-add").validate({
            rules:{
                title:{
                    minlength:4,
                    maxlength:20
                },
                area:{
                    minlength:2,
                    maxlength:6
                },
                direction:{
                    maxlength:4
                }
            },
            onkeyup:false,
            focusCleanup:true,
            success:"valid",
            submitHandler:function(form){
                // jquery 表单提交
                $("#form-admin-add").ajaxSubmit(function(message) {
                    if(message){
                        parent.window.location.href='<?php echo url("agents/room/rent"); ?>';
                        var index = parent.layer.getFrameIndex(window.name);
                        parent.$('.btn-refresh').click();
                        parent.layer.close(index);
                    }else{
                        layer.msg('填写有错误，请安要求填写！！！',{icon:1,time:1000});
                    }
                    // 对于表单提交成功后处理，message为提交页面saveReport.htm的返回内容
                });
                return false; // 必须返回false，否则表单会自己再做一次提交操作，并且页面跳转
            }
        });
        return false;
    }

</script>
